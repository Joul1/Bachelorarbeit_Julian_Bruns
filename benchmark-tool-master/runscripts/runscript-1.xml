<runscript output="output-folder">

	<machine name="zuse" cpu="24x8xE5520@2.27GHz" memory="24GB"/>
	
  	<config name="seq-generic" template="templates/seq-generic.sh"/>
  
	<system name="clingo" version="1" measures="clingo" config="seq-generic">

		<setting name="setting-1" cmdline="./encoding/mif.lp ./benchmark-tool-master/heuristics/hDistance.lp --stats --quiet=1,0" tag="basic" />
		<setting name="setting-1" cmdline="./encoding/mif.lp ./benchmark-tool-master/heuristics/hForbiddenNode.lp --stats --quiet=1,0" tag="basic" />
		<setting name="setting-1" cmdline="./encoding/mif.lp ./benchmark-tool-master/heuristics/hNaivePathDistance.lp --stats --quiet=1,0" tag="basic" />
		<setting name="setting-1" cmdline="./encoding/mif.lp ./benchmark-tool-master/heuristics/hNodeCost.lp --stats --quiet=1,0" tag="basic" />
		<setting name="setting-1" cmdline="./encoding/mif.lp ./benchmark-tool-master/heuristics/hPathArea.lp --stats --quiet=1,0" tag="basic" />
		<setting name="setting-1" cmdline="./encoding/mif.lp ./benchmark-tool-master/heuristics/hStrange.lp --stats --quiet=1,0" tag="basic" />

    </system>

	      	<pbsjob name="pbs-gen" timeout="1200" runs="1" script_mode="timeout" walltime="23:59:59" cpt="5"/>

	<benchmark name="heuristic">
		<folder path="benchmarks/instances"><ignore prefix="leavHereForLater"/></folder>
	</benchmark>

	<project name="clingo-pbs-job" job="pbs-gen">
		<runtag machine="zuse" benchmark="heuristic" tag="basic"/>
	</project>

</runscript>

